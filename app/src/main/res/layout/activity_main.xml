<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <!-- Conteúdo principal da tela -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Barra superior -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <!-- Nome do aplicativo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:text="Meu App"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
            <!-- Círculo clicável -->
            <ImageView
                android:id="@+id/ivProfileCircle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Profile"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_photo" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Conteúdo principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Alergias do usuário -->
            <TextView
                android:id="@+id/tvAllergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Alergias: "
                android:textSize="18sp" />

            <!-- Botão para ir para a tela de escaneamento -->
            <Button
                android:id="@+id/btnScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir para Escaneamento" />

            <!-- Botão para editar alergias -->
            <Button
                android:id="@+id/btnEditAllergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Editar Alergias" />
        </LinearLayout>
    </LinearLayout>

    <!-- Menu lateral (Drawer) -->
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Foto do usuário -->
        <ImageView
            android:id="@+id/ivUserPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:contentDescription="User Photo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_photo" />
        <!-- Nome do usuário -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Nome do Usuário"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Botão para configurações -->
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Configurações" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>